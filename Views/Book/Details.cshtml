@model MyBookApp.Models.BookModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Title)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Author)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Author)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Genre)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Genre)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Pages)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Pages)</dd>
    </dl>
</div>

<h3>Users who have borrowed this book</h3>

@if (Model.Loans != null && Model.Loans.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Loan Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model.Loans)
            {
                <tr>
                    <td>@loan.User?.FirstName @loan.User?.LastName</td>
                    <td>@loan.LoanDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>This book has not been borrowed yet.</p>
}

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
